                tools:text="Capture of Handshake"
                tools:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/textView1dd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1..Run airodump-ng and get to know the bssid and channel number of WIFI to be cracked" />

            <ImageView
                android:id="@+id/ssdws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingBottom="30dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/airocom" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wpatxt4" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wptxt225" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/wpacode1" />
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/ssdxxxws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/airoutcomm" />

            <ImageView
                android:id="@+id/ssdxxxwcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/airout" />

            <TextView
                android:id="@+id/textVieccw5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="From the output of the above command get to know the clients address. We will be using it to deauthanticate the client from WIFI" />



            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wptxt6" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/wpacode2" />
            </HorizontalScrollView>


            <ImageView
                android:id="@+id/ssccdxxxwcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/airplay1" />



            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wptxt7" />

